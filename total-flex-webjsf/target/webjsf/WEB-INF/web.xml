<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <listener>
        <description>ServletContextListener</description>
        <listener-class>com.passos.totalflex.webjsf.servlet.listener.PopulaUnidadeFederativa</listener-class>
    </listener>
    <servlet>
        <servlet-name>TestCrud</servlet-name>
        <servlet-class>com.passos.test.TestCrud</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestCrud</servlet-name>
        <url-pattern>/TestCrud</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UnidadeDeMedidaServlet</servlet-name>
        <servlet-class>com.passos.totalflex.webjsf.servlet.crud.UnidadeDeMedidaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UnidadeDeMedidaServlet</servlet-name>
        <url-pattern>/servlet/UnidadeDeMedidaServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
